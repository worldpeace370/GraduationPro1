<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false"><shape>
            <gradient android:angle="270" android:endColor="@color/color_std_light_grey" android:startColor="@color/color_std_light_grey" />

            <corners android:radius="1dp" />
        </shape></item>
    <item android:state_pressed="true"><shape>
            <gradient android:angle="270" android:endColor="@color/color_std_red_pressed" android:startColor="@color/color_std_red_pressed" />

            <corners android:radius="1dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="270" android:endColor="@color/color_std_red" android:startColor="@color/color_std_red" />

            <corners android:radius="1dp" />
        </shape></item>

</selector>