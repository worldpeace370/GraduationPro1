<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lebron.graduationpro1.ui.fragment.ControlFragment">

        <include android:id="@+id/toolbar"
            layout="@layout/layout_toolbar"/>

        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:textSize="16sp"
            android:text="水温控制"/>
        <LinearLayout android:id="@+id/linearLayout_temp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:gravity="center">
                <TextView android:id="@+id/textView_label_water_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="水温:"/>
                <SeekBar android:id="@+id/seekBar_water_temp"
                    android:layout_weight="1.0"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="60"
                    android:layout_width="0dp"
                    android:progressDrawable="@drawable/progress_holo_light"
                    android:thumb="@mipmap/seek_bar_icon"/>
                <TextView android:id="@+id/textView_water_temp_MAX"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="100℃"/>
        </LinearLayout>
        <RelativeLayout android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:gravity="center_horizontal">
                <ImageView android:id="@+id/water_decrease"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/decrease"
                    android:background="@drawable/inc_dec_selector"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="left"/>
                <ImageView android:id="@+id/water_increase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/increase"
                    android:background="@drawable/inc_dec_selector"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="right"/>
        </RelativeLayout>
        <Button android:id="@+id/water_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:background="@drawable/control_post"
            android:textSize="20sp"
            android:text="提交水温更改?"/>
        <View android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/tabSelected"/>
        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:textSize="16sp"
            android:text="转速控制"/>
        <LinearLayout android:id="@+id/linearLayout_rate"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:gravity="center">
                <TextView android:id="@+id/textView_label_water_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="转速:"/>
                <SeekBar android:id="@+id/seekBar_water_rate"
                    android:layout_weight="1.0"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="40"
                    android:layout_width="0dp"
                    android:progressDrawable="@drawable/progress_holo_light"
                    android:thumb="@mipmap/seek_bar_icon"/>
                <TextView android:id="@+id/textView_water_rate_MAX"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="100n/s"/>
        </LinearLayout>
        <RelativeLayout android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:gravity="center_horizontal">
                <ImageView android:id="@+id/rate_decrease"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/decrease"
                    android:background="@drawable/inc_dec_selector"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="left"/>
                <ImageView android:id="@+id/rate_increase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/increase"
                    android:background="@drawable/inc_dec_selector"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="right"/>
        </RelativeLayout>
        <Button android:id="@+id/rate_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/control_post"
            android:gravity="center"
            android:textSize="20sp"
            android:text="提交转速更改?"/>
</LinearLayout>
