<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_node_choice"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lebron.graduationpro1.ui.activity.NodeChoiceActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#18b6ef"
        android:layout_alignParentTop="true"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp">
        <ImageView android:id="@+id/node_choice_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="25dp"
            android:layout_marginStart="2dp"
            android:layout_gravity="start"
            android:onClick="back"
            android:background="@drawable/background_back"
            android:src="@mipmap/btn_back_normal"/>
        <TextView android:id="@+id/tab_node_choice"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="22sp"
            android:textColor="#ffffff"
            android:textStyle="normal"
            android:text="@string/node_choice" />
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#cae1ff"
            >
            <SearchView
                android:id="@+id/searchView"
                android:layout_marginStart="85dp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:iconifiedByDefault="false"
                android:imeOptions="actionSearch"
                android:queryHint="中文/拼音/首字母">
            </SearchView>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/last_scan_layout"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingStart="10dp">
            <TextView android:id="@+id/last_scan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:paddingTop="3dp"
                android:drawableStart="@mipmap/last_scan"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="@string/last_scan"/>
            <TextView android:id="@+id/scan_node"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/last_scan"
                android:layout_marginLeft="5dp"
                android:paddingTop="5dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="@string/scan_node"/>
        </RelativeLayout>
        <se.emilsjolander.stickylistheaders.StickyListHeadersListView
            android:id="@+id/node_listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </se.emilsjolander.stickylistheaders.StickyListHeadersListView>
    </LinearLayout>
</LinearLayout>
