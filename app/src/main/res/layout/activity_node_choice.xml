<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_node_choice"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lebron.graduationpro1.ui.activity.NodeChoiceActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#18b6ef"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp">
        <ImageView android:id="@+id/node_choice_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="25dp"
            android:layout_marginStart="2dp"
            android:layout_gravity="start"
            android:background="@drawable/background_back"
            android:src="@mipmap/btn_back_normal"/>
        <TextView android:id="@+id/tab_node_choice"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="22sp"
            android:textColor="#ffffff"
            android:textStyle="normal"
            android:text="@string/node_choice" />
    </android.support.v7.widget.Toolbar>
</LinearLayout>
