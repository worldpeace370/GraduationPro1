<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/layout_toolbar"/>

    <include
        layout="@layout/div_line_horizontal"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="16dp"/>

    <com.lebron.graduationpro1.view.ClearEditText
        android:id="@+id/edt_nick_name"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/color_std_white"
        android:drawablePadding="10dp"
        android:gravity="left|center"
        android:hint="@string/input_user_nick"
        android:maxLength="32"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/text_color_black"
        android:textColorHint="@color/color_std_light_grey"
        android:textSize="@dimen/custom_small_text_size"/>

    <include
        layout="@layout/div_line_horizontal"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/change_nick_hint"
        android:textColor="@color/text_color_black"
        android:textSize="@dimen/custom_mini_text_size"/>

</LinearLayout>
